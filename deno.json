{
  "name": "@nesterow/xmod",
  "nodeModulesDir": "auto",
  "tasks": {
    "text": "deno test"
  },
  "exports": "./mod.ts",
  "imports": {
    "@preact/signals": "npm:@preact/signals@^2.5.1",
    "@std/assert": "jsr:@std/assert@1"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
